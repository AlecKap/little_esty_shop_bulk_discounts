<h3>Bulk Discounts</h3>
<h3><%= link_to "Create a new Bulk Discount", new_merchant_bulk_discount_path(@merchant) %></h3>
<br>
<section id="list_of_discounts">
  <h3>List of Discounts</h3>
  <ul>
    <% @merchant.bulk_discounts.each do |discount| %>
      <div id="bulk_discount_<%= discount.id%>">
      <li><h4><%= link_to "#{discount.name}", bulk_discount_path(discount) %></h4></li>
      <p>Discount Percent: <%= (discount.discount_percent * 100) %>%</p>
      <p>Discount Threshold: <%= discount.quantity_threshold %></p>
      <p><%= button_to "Delete #{discount.name}", merchant_bulk_discount_path(@merchant, discount), method: :delete %></p>
      <br>
      </div>
    <% end %>
  </ul>
</section>
<br>
<section id="upcoming_holidays">
  <h3>Next Three Upcoming Holidays</h3>
  <% @holidays.each do |holiday| %>
  <div id="holiday_<%= holiday.name %>">
    <p>Holiday: <%= holiday.name %></p>
    <p>Date of holiday: <%= holiday.date %></p>
    <br>
    </div>
  <% end %>
</section>